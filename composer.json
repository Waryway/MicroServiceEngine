{
    "name": "waryway/micro-service-engine",
    "description": "ReactPHP server for use in micro-service applications",
    "type": "application",
    "license": "MIT",
	"require": {
        "react/http": "1.2.0",
        "nikic/fast-route": "1.2.0",
		"waryway/php-traits-library": "1.0.4"
    },
	"suggest": {
		"lcobucci/jwt": "Can be used for JWT authentication mechanisms"
	},
    "authors": [
        {
            "name": "Kyle Wiering",
            "email": "kyle@waryway.com"
        }
    ],
	"autoload": {
		"psr-4": {
			"Waryway\\MicroServiceEngine\\": "src/"
		}
	},
    "autoload-dev": {
      "psr-4": {
        "Waryway\\Example\\": "example/"
      }
    },
    "bin":["server"],
    "minimum-stability": "stable",
    "require-dev": {
      "phpunit/phpunit": "^8"
    }
}
